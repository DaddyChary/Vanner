<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo1"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/logoTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vanner"
                android:textColor="@color/white"
                android:textSize="54sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="55dp" />

            <ImageView
                android:id="@+id/profileImageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:background="@android:color/darker_gray"
                android:hint="Foto de Perfil"
                android:src="@drawable/ic_profile_placeholder" />

            <TextView
                android:id="@+id/photoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PHOTO\nPROFILE"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/tv_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Datos del perfil"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:background="#335373"
                android:padding="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:layout_gravity="center" />

            <EditText
                android:id="@+id/et_nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre"
                android:textColor="#ffffff"
                android:background="#335373"
                android:padding="8dp" />

            <EditText
                android:id="@+id/et_apellido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Apellido"
                android:textColor="#ffffff"
                android:background="#335373"
                android:padding="8dp"
                android:layout_marginTop="8dp" />

            <EditText
                android:id="@+id/et_Rut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Rut"
                android:textColor="#ffffff"
                android:background="#335373"
                android:padding="8dp"
                android:layout_marginTop="8dp" />

            <EditText
                android:id="@+id/et_direccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Dirección"
                android:textColor="#ffffff"
                android:background="#335373"
                android:padding="8dp"
                android:layout_marginTop="8dp" />

            <EditText
                android:id="@+id/et_numeroCasa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Número de casa o departamento"
                android:textColor="#ffffff"
                android:background="#335373"
                android:padding="8dp"
                android:layout_marginTop="8dp" />

            <EditText
                android:id="@+id/et_comuna"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Comuna"
                android:textColor="#ffffff"
                android:background="#335373"
                android:padding="8dp"
                android:layout_marginTop="8dp" />

            <EditText
                android:id="@+id/et_region"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Región"
                android:textColor="#ffffff"
                android:background="#335373"
                android:padding="8dp"
                android:layout_marginTop="8dp" />

            <EditText
                android:id="@+id/et_telefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Teléfono"
                android:textColor="#ffffff"
                android:background="#335373"
                android:padding="8dp"
                android:layout_marginTop="8dp" />

            <EditText
                android:id="@+id/et_correo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Correo"
                android:textColor="#ffffff"
                android:background="#335373"
                android:padding="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="16dp">

                <ImageButton
                    android:id="@+id/btnRechazar"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/ic_cancel"
                    android:contentDescription="Rechazar"
                    android:layout_marginEnd="8dp" />

                <ImageButton
                    android:id="@+id/btnAprobar"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/aprobar"
                    android:contentDescription="Aprobar"
                    android:layout_marginStart="8dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
