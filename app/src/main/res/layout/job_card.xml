<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:textColor="#FFD700"
    android:layout_marginBottom="8dp"
    android:background="@drawable/fondo1">

    <!-- Título del empleo -->

    <!-- Descripción del empleo -->
    <TextView
        android:id="@+id/tvJobTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Título del Empleo"
        android:textColor="#FFD700"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvJobDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descripción del empleo"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        android:textColor="#FFD700"/>

    <!-- Sueldo -->
    <TextView
        android:id="@+id/tvJobSalary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sueldo: $0"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        android:textColor="#FFD700"/>

    <!-- Vacantes -->
    <TextView
        android:id="@+id/tvJobVacancies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vacantes: 0"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        android:textColor="#FFD700"/>

    <!-- Modalidad -->
    <TextView
        android:id="@+id/tvJobMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modalidad: Presencial"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        android:textColor="#FFD700"/>

    <!-- Fecha límite -->
    <TextView
        android:id="@+id/tvJobDeadline"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha límite: 01/01/2023"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        android:textColor="#FFD700"/>

    <!-- Botones de Editar y Eliminar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="end">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar"
            android:textColor="#000000"
            android:backgroundTint="#FFD700"
            android:contentDescription="Ver detalles de empleo 2" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eliminar"
            android:textColor="#000000"
            android:backgroundTint="#FFD700"
            android:contentDescription="Ver detalles de empleo 2" />


    </LinearLayout>

</LinearLayout>
