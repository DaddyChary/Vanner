<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/fondo1">
    

    <!-- Botón Regresar -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRegresarTarjeta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Regresar"
        android:textColor="#000000"
        app:backgroundTint="#FFD700"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ScrollView para la lista de empleos -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnRegresarTarjeta"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Tarjeta de empleo 1 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:background="#d0d3d4">

                    <!-- Layout para texto -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/jobTitle1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Título del Empleo 1"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/jobDescription1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Descripción breve del empleo 1" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/jobSalary1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sueldo: $1200" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/jobVacancies1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vacantes: 2" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/jobMode1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Modalidad: Tiempo parcial" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/jobDeadline1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fecha límite: 30/11/2024"
                            android:layout_marginBottom="8dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="end">

                            <!-- Botón Ver -->
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnVerUsuarios1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ver"
                                android:textColor="#000000"
                                app:backgroundTint="#FFD700"
                                android:contentDescription="Ver detalles de empleo 1" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Imagen a la derecha -->
                    <ImageView
                        android:id="@+id/jobImage1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginStart="8dp"
                        android:contentDescription="Imagen del empleo 1"
                        android:src="@drawable/sample_image" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Tarjeta de empleo 2 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:background="#d0d3d4">

                    <!-- Layout para texto -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/jobTitle2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Título del Empleo 2"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/jobDescription2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Descripción breve del empleo 2" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/jobSalary2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sueldo: $1500" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/jobVacancies2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vacantes: 3" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/jobMode2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Modalidad: Remoto" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/jobDeadline2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fecha límite: 15/12/2024"
                            android:layout_marginBottom="8dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="end">

                            <!-- Botón Ver -->
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnVerUsuarios2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ver"
                                android:textColor="#000000"
                                app:backgroundTint="#FFD700"
                                android:contentDescription="Ver detalles de empleo 2" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Imagen a la derecha -->
                    <ImageView
                        android:id="@+id/jobImage2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginStart="8dp"
                        android:contentDescription="Imagen del empleo 2"
                        android:src="@drawable/sample_image" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
