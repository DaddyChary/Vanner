<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo1"
    tools:context="activities.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Imagen de perfil -->
            <ImageView
                android:id="@+id/profileImageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="#000000"
                android:contentDescription="Foto de Perfil" />

            <!-- Informaci贸n de perfil -->
            <TextView
                android:id="@+id/tv_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Datos del perfil"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#FFD700"
                android:layout_marginTop="16dp"
                android:layout_gravity="center" />

            <!-- Campo Descripci贸n del Empleo -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Descripci贸n del empleo"
                android:textColorHint="#d0d3d4"
                android:layout_marginBottom="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDescripci贸n"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFD700" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Campo Sueldo -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Sueldo"
                android:textColorHint="#d0d3d4"
                android:layout_marginBottom="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etSueldo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFD700" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Campo Vacantes  -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Vacantes"
                android:textColorHint="#d0d3d4"
                android:layout_marginBottom="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etVacantes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFD700" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Campo Modalidad -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Modalidad"
                android:textColorHint="#d0d3d4"
                android:layout_marginBottom="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etModalidad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFD700" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Campo Fecha Limite -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Fecha Limite "
                android:textColorHint="#d0d3d4"
                android:layout_marginBottom="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etFechaLimite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFD700" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:padding="20dp">

                <ImageButton
                    android:id="@+id/btnRechazar"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/ic_cancel"
                    android:contentDescription="Rechazar"
                    android:layout_marginEnd="8dp" />

                <ImageButton
                    android:id="@+id/btnAprobar"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/aprobar"
                    android:contentDescription="Aprobar"
                    android:layout_marginStart="8dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
