<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/fondo1">

        <!-- Job Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Título del Empleo"
            android:textColor="#FFD700"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etJobTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFD700"
                android:textColorHint="#d0d3d4"
                android:textSize="20sp"
                android:textStyle="italic"
                android:gravity="center"
                android:hint="Ej. Desarrollador de Software"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Job Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción del Empleo"
            android:textColor="#FFD700"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etJobDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFD700"
                android:textColorHint="#d0d3d4"
                android:textSize="20sp"
                android:textStyle="italic"
                android:hint="Ej. Descripción breve de las responsabilidades"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Job Salary -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sueldo"
            android:textColor="#FFD700"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etJobSalary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFD700"
                android:textColorHint="#d0d3d4"
                android:textSize="20sp"
                android:textStyle="italic"
                android:hint="Ej. $5000"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Job Vacancies -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vacantes"
            android:textColor="#FFD700"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etJobVacancies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFD700"
                android:textColorHint="#d0d3d4"
                android:textSize="20sp"
                android:textStyle="italic"
                android:hint="Ej. 5"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Job Modality -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modalidad"
            android:textColor="#FFD700"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etJobMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFD700"
                android:textColorHint="#d0d3d4"
                android:textSize="20sp"
                android:textStyle="italic"
                android:hint="Ej. Presencial"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Job Deadline -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha límite (dd/MM/yyyy)"
            android:textColor="#FFD700"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etJobDeadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFD700"
                android:textColorHint="#d0d3d4"
                android:textSize="20sp"
                android:textStyle="italic"
                android:hint="Ej. 30/12/2024"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Company Name -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre de la Empresa"
            android:textColor="#FFD700"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etCompanyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFD700"
                android:textColorHint="#d0d3d4"
                android:textSize="20sp"
                android:textStyle="italic"
                android:hint="Ej. Nombre de la empresa"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Company Email -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Correo Electrónico de la Empresa"
            android:textColor="#FFD700"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etCompanyEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFD700"
                android:textColorHint="#d0d3d4"
                android:textSize="20sp"
                android:textStyle="italic"
                android:hint="Ej. email@empresa.com"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Actualizar"
                android:textColor="#000000"
                android:backgroundTint="#FFD700" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancelar"
                android:textColor="#000000"
                android:backgroundTint="#FFD700"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
