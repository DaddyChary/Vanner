<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/fondo1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/perfilusuario"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Editar"
                    android:textColor="#FFFF00"
                    app:backgroundTint="#000000" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Eliminar"
                    android:textColor="#FFFF00"
                    app:backgroundTint="#000000"
                    android:layout_marginTop="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Salir de Perfil"
                    android:textColor="#FFFF00"
                    app:backgroundTint="#000000"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Datos del perfil"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#FFFF00"
            app:backgroundTint="#000000"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <!-- Nombre Field -->
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:textColor="#FFFF00" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:boxBackgroundColor="#000000"
            app:boxStrokeColor="#FFFF00">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ingrese su nombre"
                android:textColor="#FFFF00"
                android:textColorHint="#888888" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Apellido Field -->
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apellido"
            android:textColor="#FFFF00"
            android:layout_marginTop="16dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:boxBackgroundColor="#000000"
            app:boxStrokeColor="#FFFF00">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_apellido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ingrese su apellido"
                android:textColor="#FFFF00"
                android:textColorHint="#888888" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Rut Field -->
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rut"
            android:textColor="#FFFF00"
            android:layout_marginTop="16dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:boxBackgroundColor="#000000"
            app:boxStrokeColor="#FFFF00">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_Rut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ingrese su Rut"
                android:textColor="#FFFF00"
                android:textColorHint="#888888" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Dirección Field -->
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dirección"
            android:textColor="#FFFF00"
            android:layout_marginTop="16dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:boxBackgroundColor="#000000"
            app:boxStrokeColor="#FFFF00">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_direccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ingrese su dirección"
                android:textColor="#FFFF00"
                android:textColorHint="#888888" />
        </com.google.android.material.textfield.TextInputLayout>
        <!-- Numero de Casa Field -->
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Numero de casa o departamento"
            android:textColor="#FFFF00"
            android:layout_marginTop="16dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:boxBackgroundColor="#000000"
            app:boxStrokeColor="#FFFF00">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_numeroCasa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ingrese numero de casa o departamento"
                android:textColor="#FFFF00"
                android:textColorHint="#888888" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Comuna Field -->
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comuna"
            android:textColor="#FFFF00"
            android:layout_marginTop="16dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:boxBackgroundColor="#000000"
            app:boxStrokeColor="#FFFF00">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_comuna"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ingrese Comuna"
                android:textColor="#FFFF00"
                android:textColorHint="#888888" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Region -->
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Región"
            android:textColor="#FFFF00"
            android:layout_marginTop="16dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:boxBackgroundColor="#000000"
            app:boxStrokeColor="#FFFF00">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_region"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ingrese la Región"
                android:textColor="#FFFF00"
                android:textColorHint="#888888" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Telefono -->
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Telefono"
            android:textColor="#FFFF00"
            android:layout_marginTop="16dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:boxBackgroundColor="#000000"
            app:boxStrokeColor="#FFFF00">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_telefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ingrese su Telefono"
                android:textColor="#FFFF00"
                android:textColorHint="#888888" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Correo -->
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correo"
            android:textColor="#FFFF00"
            android:layout_marginTop="16dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:boxBackgroundColor="#000000"
            app:boxStrokeColor="#FFFF00">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_correo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ingrese su Correo"
                android:textColor="#FFFF00"
                android:textColorHint="#888888" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Entrenadores -->
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entrenadores"
            android:textColor="#FFFF00"
            android:layout_marginTop="16dp" />

        <!-- Grupo de RadioButtons -->
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Género"
            android:textColor="#FFFF00"
            android:layout_marginTop="16dp" />

        <RadioGroup
            android:id="@+id/rgGrupoEntrenadores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbEntrenadores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entrenadores"
                android:textColor="#FFFF00"
                android:buttonTint="#FFFF00" />

            <RadioButton
                android:id="@+id/rbTecnicos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Técnicos"
                android:textColor="#FFFF00"
                android:buttonTint="#FFFF00"
                android:layout_marginStart="16dp" />

            <RadioButton
                android:id="@+id/rbEmpresas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Empresas"
                android:textColor="#FFFF00"
                android:buttonTint="#FFFF00"
                android:layout_marginStart="16dp" />
        </RadioGroup>

        <!-- Espelizacion -->
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Espelizacion"
            android:textColor="#FFFF00"
            android:layout_marginTop="16dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:boxBackgroundColor="#000000"
            app:boxStrokeColor="#FFFF00">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Espelizacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ingrese su Espelizacion"
                android:textColor="#FFFF00"
                android:textColorHint="#888888" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Botón Regresar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Regresar"
            android:textColor="#FFFF00"
            app:backgroundTint="#000000"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>
